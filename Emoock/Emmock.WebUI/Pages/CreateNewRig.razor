@page "/createrig"

<h1>Rigs</h1>

@if (CreateRigViewModel == null)
{
	<p><em>Loading...</em></p>
}
else
{
	<EditForm Model="@CreateRigViewModel" OnValidSubmit="@CreateRigViewModel.CreateRig">
		<InputText id="name" @bind-Value="CreateRigViewModel.Name" />
		<InputText id="type" @bind-Value="CreateRigViewModel.Type" />


		<button type="submit">Create</button>
	</EditForm>
}
