<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
					xmlns:system="clr-namespace:System;assembly=mscorlib">

	<!-- Font Sizes -->
	<system:Double x:Key="XLarge">28</system:Double>
	<system:Double x:Key="Large">18</system:Double>
	<system:Double x:Key="Medium">16</system:Double>
	<system:Double x:Key="Small">13</system:Double>
	<system:Double x:Key="Tiny">12</system:Double>

	<!-- Fonts -->
	<FontFamily x:Key="DefaultFont">Fonts/Roboto-Light.ttf #Roboto</FontFamily>
	<FontFamily x:Key="DefaultFontBold">Fonts/Roboto-Light.ttf #Roboto</FontFamily>
</ResourceDictionary>